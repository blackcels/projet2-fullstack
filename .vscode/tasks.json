{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Backend",
      "type": "shell",
      "command": "./mvnw spring-boot:run",
      "options": { "cwd": "${workspaceFolder}/../Back-end" },
      "isBackground": true,
      "problemMatcher": [
        {
          "owner": "spring-boot",
          "pattern": [
            { "regexp": "^.*$", "message": 0 }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".*Starting .*",
            "endsPattern": ".*Started .* in .*seconds.*"
          }
        }
      ]
    },
    {
      "label": "Start Frontend",
      "type": "shell",
      "command": "npm start",
      "options": { "cwd": "${workspaceFolder}" },
      "isBackground": true,
      "problemMatcher": [
        {
          "owner": "angular",
          "pattern": [
            { "regexp": "^.*$", "message": 0 }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".*Starting.*|.*Starting dev server.*",
            "endsPattern": ".*Compiled successfully.*|.*listening on.*"
          }
        }
      ]
    },
    {
      "label": "Start All",
      "dependsOn": ["Start Backend", "Start Frontend"],
      "dependsOrder": "sequence"
    }
  ]
}